<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/im_banda"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:contentDescription="@string/todo"
            android:padding="2dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/im_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/todo"
            android:visibility="invisible"
            app:srcCompat="@drawable/circulo_verde" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/im_banda"
            android:text="@string/nome_usuario"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView"
            android:text="@string/avalie_a_banda"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/im_banda"
            android:text="@string/avalie_a_banda"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/im_banda"
            android:text="@string/avalie_a_banda"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>